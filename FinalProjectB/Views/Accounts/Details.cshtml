@model FinalProjectB.Models.Account

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Account</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Username
                </th>
                <th>
                    Role
                </th>


            </tr>
        </thead>
        <tbody>

            <tr>
                <td>
                    @Html.DisplayFor(model => model.fName)
                </td>
                <td>
                    @Html.DisplayFor(model => model.lName)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Email)
                </td>
